{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".storybook/vite.config copy.ts",
    ".react-router/types/**/*"
  ],
  "exclude": [".react-router"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022", "esnext"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist"
  }
}
